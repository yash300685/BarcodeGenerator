<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeGenerator.MainPage"
              xmlns:local="clr-namespace:BarcodeGenerator">
  <ContentPage.Content>
      <StackLayout>
          <Image Source="Images\rainbow.png" />
            <Grid Margin="30,-30,30,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                <Image Source="Images\logo.png"  Grid.Row="1" Grid.Column="0" WidthRequest="160" HeightRequest="54"/>
                <Label Text="QR Code Generator" Grid.Row="1" Grid.Column="2" FontSize="Medium" HorizontalOptions="End"/>
            </Grid>

            
        </StackLayout>
  </ContentPage.Content>
</ContentPage>